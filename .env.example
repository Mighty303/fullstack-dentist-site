# SMTP (Nodemailer) - Gmail app password required
SMTP_EMAIL=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# reCAPTCHA - Get both from https://www.google.com/recaptcha/admin
# Site key = client-side (public)
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key
# Secret key = server-side only (never use NEXT_PUBLIC_ prefix)
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Optional: External blog API
# NEXT_PUBLIC_API_BASE_URL=
